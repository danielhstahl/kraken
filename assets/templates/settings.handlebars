<div class='block-entries'>
  <ul class="demo-list-control mdl-list fixed-width">
    <li class="mdl-list__item">
      <span class="mdl-list__item-primary-content">
          <i class="material-icons large-icon mdl-color-text--orange-800 ">swap_horiz</i>
          <span >
              Auto-Rebalance
          </span>
      </span>
      <span class="mdl-list__item-secondary-action">
        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-1">
          <input type="checkbox" id="checkbox-1" class="mdl-checkbox__input" checked />
        </label>
      </span>
    </li>
    <li class="mdl-list__item">
        <i class="material-icons  large-icon mdl-color-text--orange-800 ">vpn_key</i>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input" type="password" id="key">
              <label class="mdl-textfield__label" for="key">Api Key</label>
          </div>
          <button id='submitkey' class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' data-id='key' onclick='{{function}}(this)'>Submit</button>
    </li>
    <li class="mdl-list__item">
        <i class="material-icons  large-icon mdl-color-text--orange-800">lock</i>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label"> <!-- fixed-width-->
              <input class="mdl-textfield__input" type="password" id="secret">
              <label class="mdl-textfield__label" for="secret">Api Secret</label>
          </div>
          <button id='submitsecret' class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' data-id='secret' onclick='{{function}}(this)'>Submit</button>
    </li>
    <li class="mdl-list__item ">
      <div class="mdl-selectfield mdl-js-selectfield mdl-selectfield--floating-label fixed-width">
        <select id="chooseNumeraire" class="mdl-selectfield__select" onchange='{{selectFunction}}(this)'>
          {{#each numeraire}}
            <option value='{{this.numeraireKey}}'>{{this.numeraireLabel}}</option>
          {{/each}}
        </select>
        <label class="mdl-selectfield__label" for="chooseNumeraire">Choose Numeraire</label>
      </div>
    </li>
  </ul>
</div>
